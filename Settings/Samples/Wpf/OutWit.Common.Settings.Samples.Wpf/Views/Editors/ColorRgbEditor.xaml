<UserControl x:Class="OutWit.Common.Settings.Samples.Wpf.Views.Editors.ColorRgbEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="40" />
        </Grid.ColumnDefinitions>

        <Slider Grid.Column="0" Minimum="0" Maximum="255"
                Value="{Binding ColorR, UpdateSourceTrigger=PropertyChanged}"
                IsSnapToTickEnabled="True" TickFrequency="1"
                VerticalAlignment="Center"
                ToolTip="Red" />

        <Slider Grid.Column="1" Minimum="0" Maximum="255"
                Value="{Binding ColorG, UpdateSourceTrigger=PropertyChanged}"
                IsSnapToTickEnabled="True" TickFrequency="1"
                VerticalAlignment="Center"
                ToolTip="Green" />

        <Slider Grid.Column="2" Minimum="0" Maximum="255"
                Value="{Binding ColorB, UpdateSourceTrigger=PropertyChanged}"
                IsSnapToTickEnabled="True" TickFrequency="1"
                VerticalAlignment="Center"
                ToolTip="Blue" />

        <Border Grid.Column="3" Width="28" Height="28"
                CornerRadius="4" Margin="4,0,0,0"
                BorderBrush="Gray" BorderThickness="1"
                Background="{Binding ColorPreviewBrush}" />
    </Grid>
</UserControl>
