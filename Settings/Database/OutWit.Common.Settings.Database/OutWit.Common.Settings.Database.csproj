<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>net8.0;net9.0;net10.0</TargetFrameworks>
		<LangVersion>latest</LangVersion>
		<Nullable>enable</Nullable>

		<Version>2.0.0</Version>

		<Description>Entity Framework Core database storage provider for OutWit.Common.Settings. Supports standalone databases, shared databases, and multi-user isolation with SQLite, PostgreSQL, SQL Server, and more.</Description>
		<PackageTags>OutWit;Common;Settings;Configuration;Database;EntityFramework;EFCore</PackageTags>

		<RepositoryUrl>https://github.com/dmitrat/Common/tree/main/Settings/Database/OutWit.Common.Settings.Database</RepositoryUrl>
	</PropertyGroup>

	<ItemGroup>
		<ProjectReference Include="..\..\OutWit.Common.Settings\OutWit.Common.Settings.csproj" />
	</ItemGroup>

	<ItemGroup Condition="'$(TargetFramework)' == 'net8.0'">
		<PackageReference Include="Microsoft.EntityFrameworkCore.Relational" Version="8.0.24" />
	</ItemGroup>

	<ItemGroup Condition="'$(TargetFramework)' == 'net9.0'">
		<PackageReference Include="Microsoft.EntityFrameworkCore.Relational" Version="9.0.13" />
	</ItemGroup>

	<ItemGroup Condition="'$(TargetFramework)' == 'net10.0'">
		<PackageReference Include="Microsoft.EntityFrameworkCore.Relational" Version="10.0.2" />
	</ItemGroup>

</Project>
