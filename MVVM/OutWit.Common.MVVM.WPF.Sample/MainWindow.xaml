<Window x:Class="OutWit.Common.MVVM.WPF.Sample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OutWit.Common.MVVM.WPF.Sample"
        xmlns:controls="clr-namespace:OutWit.Common.MVVM.WPF.Sample.Controls"
        xmlns:utils="clr-namespace:OutWit.Common.MVVM.WPF.Utils;assembly=OutWit.Common.MVVM.WPF"
        mc:Ignorable="d"
        Title="OutWit.Common.MVVM.WPF Sample" Height="600" Width="800">
    
    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>
    
    <Window.Resources>
        <utils:BindingProxy x:Key="ViewModelProxy" Data="{Binding}" />
    </Window.Resources>
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="OutWit.Common.MVVM.WPF Sample Application" 
                   FontSize="24" FontWeight="Bold" Margin="0,0,0,16" />

        <!-- Source Generator Demo: Custom Control with Generated DependencyProperties -->
        <GroupBox Grid.Row="1" Header="Source Generator Demo - Custom Control" Margin="0,0,0,16">
            <StackPanel Margin="8">
                <TextBlock Text="This control uses [StyledProperty] attribute for automatic DependencyProperty generation:" 
                           Margin="0,0,0,8" FontStyle="Italic" />
                
                <controls:DemoControl x:Name="DemoCtrl"
                                      Title="{Binding ControlTitle, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      Counter="{Binding Counter}"
                                      IsHighlighted="{Binding IsHighlighted}"
                                      Margin="0,8,0,0" />
                
                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                    <TextBlock Text="Title: " VerticalAlignment="Center" />
                    <TextBox Text="{Binding ControlTitle, UpdateSourceTrigger=PropertyChanged}" 
                             Width="200" Margin="4,0,16,0" />
                    
                    <TextBlock Text="Counter: " VerticalAlignment="Center" />
                    <TextBox Text="{Binding Counter, UpdateSourceTrigger=PropertyChanged}" 
                             Width="60" Margin="4,0,16,0" />
                    
                    <CheckBox Content="Highlighted" 
                              IsChecked="{Binding IsHighlighted}" 
                              VerticalAlignment="Center" />
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- Commands Demo -->
        <GroupBox Grid.Row="2" Header="Commands Demo - DelegateCommand" Margin="0,0,0,16">
            <StackPanel Margin="8">
                <TextBlock Text="DelegateCommand uses CommandManager.RequerySuggested for automatic CanExecute updates:" 
                           Margin="0,0,0,8" FontStyle="Italic" />
                <StackPanel Orientation="Horizontal">
                    <Button Content="Increment" Command="{Binding IncrementCommand}" 
                            Padding="16,4" Margin="0,0,8,0" />
                    <Button Content="Decrement" Command="{Binding DecrementCommand}" 
                            Padding="16,4" Margin="0,0,8,0" />
                    <Button Content="Reset" Command="{Binding ResetCommand}" 
                            Padding="16,4" />
                </StackPanel>
                <TextBlock Text="{Binding Counter, StringFormat='Current Value: {0}'}" 
                           Margin="0,8,0,0" FontSize="14" />
            </StackPanel>
        </GroupBox>

        <!-- DataGrid with BindingProxy -->
        <GroupBox Grid.Row="3" Header="BindingProxy Demo - Access ViewModel from DataGrid">
            <Grid Margin="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Text="BindingProxy allows accessing parent DataContext from DataGrid rows:" 
                           Margin="0,0,0,8" FontStyle="Italic" />
                
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,20,0,8">
                    <TextBox x:Name="NewItemText" Width="200" Margin="0,0,8,0" 
                             Text="{Binding NewItemName, UpdateSourceTrigger=PropertyChanged}" />
                    <Button Content="Add Item" Command="{Binding AddItemCommand}" Padding="16,4" />
                </StackPanel>
                
                <DataGrid Grid.Row="1" ItemsSource="{Binding Items}" 
                          AutoGenerateColumns="False" CanUserAddRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60" />
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" />
                        <DataGridTemplateColumn Header="Actions" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <!-- Using BindingProxy to access ViewModel command from DataGrid row -->
                                    <Button Content="Delete" 
                                            Command="{Binding Data.DeleteItemCommand, Source={StaticResource ViewModelProxy}}"
                                            CommandParameter="{Binding}"
                                            Padding="8,2" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </GroupBox>

        <!-- Status -->
        <TextBlock Grid.Row="4" Text="{Binding StatusMessage}" 
                   Foreground="Gray" Margin="0,8,0,0" />
    </Grid>
</Window>
